S_NAME	=	server
S_SRCS	=	server.c\
			ft_printf.c\
			ft_print_1.c\
			ft_print_2.c
C_NAME	=	client
C_SRCS	=	client_static.c\
			ft_atoi.c\
			ft_printf.c\
			ft_print_1.c\
			ft_print_2.c
NAME	=	so_long
SRCS	=	
C_OBJS	= $(C_SRCS:.c=.o)
S_OBJS	= $(SRCS:.c=.o)
CC		= cc
# CFLAGS	= -Wall -Wextra -Werror -g -fsanitize=address
CFLAGS	= -Wall -Wextra -Werror
IFLAGS	= -I ./includes
LDFLAGS = -L/usr/X11R6/lib -lX11 -lXext -framework OpenGL -framework AppKit
MINILIBX = minilibx-linux/libmlx_Darwin.a

$(NAME): $(OBJS)
	make -C minilibx-linux
	$(CC) $(CFLAGS) $(IFLAGS) $(LDFLAGS) -o $(NAME) $(OBJS) $(MINILIBX)

all: $(NAME)

clean:
	rm -f $(OBJS)

fclean: clean
	rm -f $(NAME)

re: fclean all

.PHONY: all clean fclean re
